<p id="notice"></p>

<div class ="container">
  <div class ="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

      <h2>User info</h2>

      <%= form_with model: @user do |f| %>

      <div class="field">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>

      <div class="field">
        <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>

      <div class="field">
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
      </div>

        <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">

      <% end %>



    </div>
  </div>
</div>




