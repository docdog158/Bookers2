<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      
      <%= render 'books/new', book: @book ,user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      
      <table class="table">
        
        <% @user.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image %><br>
                <%= link_to user.nemw, user_path(user.id) %></td>
                
            <td><%= link_to book.title, book_path(book.id)  %></td>
            
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>