<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">

      <%= render 'books/new', book: @book ,user: @user %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">

        <%# @user.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag @user.profile_image %><br>
                <%= link_to @user.name, user_path(@user.id) %></td>
            <td><%= link_to @book.title, book_path(@book.id)  %></td>
            <td><%= @book.body %></td>
            <td><%= link_to value="Edit",edit_book_path, class:"btn btn-sm btn-success" %></td>
            <td><%= link_to value="Destroy",book_path(@book), method: :delete,class:"btn btn-sm btn-danger","data-confirm" => "本当に消しますか？" %></td>
          </tr>
        </tbody>
        <%# end %>
      </table>
    </div>
  </div>
</div>