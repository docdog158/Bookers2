<p class= "notice"><%= flash[:notice] %></p>


<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">

      <%= render 'books/new', book: @book ,user: @user %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">

        <%# @user.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag @user.profile_image %><br>
                <%= link_to @user.name, user_path(@user.id) %></td>
            <td><%= link_to @books.title, book_path(@books.id)  %></td>
            <td><%= @books.body %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy",book_path(@books), method: :delete,class:"btn btn-sm btn-danger","data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
        <%# end %>
      </table>
    </div>
  </div>
</div>