<% @book.each do |book| %>


<%= link_to book_path(book.id) do %>
  <%= image_tag book.get_image %>
<% end %>


<div class="col-md-3">

  <h2>User info</h2>

  <table class="table">
    <tbody>
      <tr></tr>

      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>

      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>

    </tbody>
  </table>
  <div class="row">
    <%= link_to '<i class="fa-solid fa-user-gear"></i>', edit_user_path(), class: 'btn btn-outline-secondary btn-block edit_user_150235' %>

  </div>



  <h2 class="mt-3">New book</h2>
  <form action="/books" accept-charset="UTF-8" method="post">

    <div class="form-group">
      <label for="book_title">Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>


    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
    </div>



  </form>
</div>
