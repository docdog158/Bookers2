<div class ="container">
  <div class ="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

      <h2>Editing Book</h2>

      <%= form_with model: @book do |f| %>

      <div class="field">
        <label for="inputTitle">Title</label><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="area">
        <label for="inputBody">Opinion</label>
        <%= f.text_field :body, class: "form-control" %>
      </div>

      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
      
      <span>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", "/books" %>
      </span>
      
      <% end %>



    </div>
  </div>
</div>


